{
  "mappings": [
    {
      "request": {
        "method": "POST",
        "url": "/bank/processPayment"
      },
      "response": {
        "status": 400,
        "jsonBody": {
          "error": "This API not available any more"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "request": {
        "method": "POST",
        "urlPath": "/bank/processPaymentV2",
        "queryParameters": {
          "id": {
            "matches": ".*"
          }
        }
      },
      "response": {
        "status": 202,
        "jsonBody": {
          "transactionId": "{{request.query.id}}",
          "status": "IN_PROGRESS"
        },
        "headers": {
          "Content-Type": "application/json"
        },
        "transformers": [
          "response-template"
        ]
      }
    },
    {
      "request": {
        "method": "GET",
        "urlPath": "/bank/paymentStatusV2",
        "queryParameters": {
          "id": {
            "matches": ".*"
          }
        }
      },
      "response": {
        "status": 200,
        "jsonBody": {
          "transactionId": "{{request.query.id}}",
          "status": "SUCCESS"
        },
        "headers": {
          "Content-Type": "application/json"
        },
        "transformers": [
          "response-template"
        ]
      }
    },
    {
      "request": {
        "method": "POST",
        "url": "/bank/cancelPayment"
      },
      "response": {
        "status": 204,
        "body": ""
      }
    }
  ]
}
